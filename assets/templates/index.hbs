<!DOCTYPE html>
    <head>
        <meta charset="UTF-8">
        <script type="text/javascript" src="{{base_url}}index.js"></script>
        <link rel="stylesheet" href="{{base_url}}style.css">
    </head>
    <body>
        <h1>TILs</h1>

        {{#if index_fragment}}
        <div class="index-content">
            {{{index_fragment}}}
        </div>
        {{/if}}

        <h2>TILs by topic</h2>
        <div class="by-topic">
            <p>
                Sort <button class="sort" onclick="sortAlpha()">alphabetically</button>,
                or <button class="sort" onclick="sortCount()">by count</button>.
            </p>
            <ul class="topic-list">
                {{#each tag_counts}}
                <li class="topic-list-tag">
                    <a class="til-tag" href="{{@root.base_url}}category/{{@key}}">
                        <span>{{@key}}</span>
                        <span class="til-tag-count">{{this}}</span>
                    </a>
                </li>
                {{/each}}
            </ul>
        </div>

        <h2>Recent TILs</h2>
        <div class="recent">
            {{#each recent}}
            <div class="recent-til">
                <header class="til-header">
                    <h3><a class="til-title" href="{{@root.base_url}}til/{{(slugify meta.title)}}">{{meta.title}}</a></h3>
                    <span class="til-date">{{meta.date}}</span>
                    {{#each meta.tags}}
                    <a class="til-tag" href="{{@root.base_url}}category/{{this}}">
                        <span>{{this}}</span>
                    </a>
                    {{/each}}
                </header>
            </div>
            {{/each}}
        </div>
    </body>
</html>
